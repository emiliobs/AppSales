@model Sales.Backend.Models.ProductsView

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
               <form asp-action="Edit" asp-controller="Products" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductId" />
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Remarks" class="control-label"></label>
                    <textarea asp-for="Remarks" class="form-control"></textarea>
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImagePath" class="control-label"></label>
                    <img src="~/images/@Model.ImagePath" class="form-control" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />
                    <input asp-for="ImagePath" class="form-control" type="hidden"/>
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="ImagePath" class="control-label"></label>*@
                    <input asp-for="ImageFile" type="file" name="ImageFile" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PublishOn" class="control-label"></label>
                    <input asp-for="PublishOn" class="form-control" />
                    <span asp-validation-for="PublishOn" class="text-danger"></span>
                </div>
                <div class="form-group form-horizontal">
                    <input type="submit" value="Save" class="btn btn-info" />  |
                    <a asp-action="Index" class="btn btn-warning">Back to List</a>
                </div>
            </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
